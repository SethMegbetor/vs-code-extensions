{
	"build": {
		"latest": "true",
		"rootDistro": "debian",
		"tags": [
			"rust:${VERSION}-1",
			"rust:${VERSION}"
		]
	},
	"dependencies": {
		"image": "rust:1",
		"imageLink": "https://hub.docker.com/_/rust",
		"debian": [
			"apt-utils", 
			"dialog", 
			"ca-certificates",
			"git",
			"iproute2",
			"procps",
			"curl",
			"openssh-client",
			"less",
			"nano",
			"gnupg",
			"jq",
			"wget",
			"unzip",
			"lsb-release",
			"apt-transport-https",
			"libc6",
			"libgcc1",
			"libgssapi-krb5-2",
			"libicu[0-9][0-9]",
			"libssl1.1",
			"libstdc++6",
			"zlib1g",
			"sudo",
			"zsh",
			"lldb",
			"python3-minimal", 
			"libpython3.7"
		],
		"git": {
			"Oh My Zsh!": "/root/.oh-my-zsh"
		},
		"cargo": {
			"rls": "rls --version",
			"rustfmt": "rustfmt --version",
			"rust-analysis": null,
			"rust-src": null,
			"clippy": null
		}
	}
}
